<!DOCTYPE html>
<html>
<head>
  <title>Railsblog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<header>
	<% if user_signed_in? %>
		<p>hello, <%= current_user.email %> - <%= link_to "logout", destroy_user_session_url, method: :delete %>
	<% else %>
		<%= link_to "register", new_user_registration_url %> / <%= link_to "login", new_user_session_url %>
	<% end %>
</header>
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
<%= yield %>

</body>
</html>
